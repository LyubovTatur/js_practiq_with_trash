<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.Employee" table="employee" schema="test1">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="job">
            <column name="job" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="employeeDate">
            <column name="employee_date" sql-type="date" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>