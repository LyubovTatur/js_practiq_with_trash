<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.package_tables.Languages" table="languages" schema="db_films">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="shortTitle">
            <column name="short_title" sql-type="varchar(3)" length="3" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>